<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.natlia.foodlovers.principalActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="false"
        android:scaleType="fitCenter"
        android:scaleY="2"
        app:srcCompat="@drawable/ic_imgmulher"
        tools:scaleX="2"
        android:layout_marginBottom="91dp"
        android:layout_above="@+id/textViewNome"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome da Pessoa, 99"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="102dp"
        android:textSize="10pt"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnfoguinho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_btnfoguinho"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textViewNome" />

    <Button
        android:id="@+id/btncoracao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="36dp"
        android:layout_toEndOf="@+id/btnfoguinho"
        android:background="@drawable/ic_btncoracao"
        android:scaleX="1.2"
        android:scaleY="1.2" />

</RelativeLayout>
